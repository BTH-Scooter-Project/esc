[flake8]
# 4.0.1 (flake8-comprehensions: 3.7.0, flake8-docstrings: 1.6.0, pydocstyle: 6.1.1, mccabe: 0.6.1, naming: 0.12.1, pycodestyle: 2.8.0, pyflakes: 2.4.0) CPython 3.10.0 on Linux
# ignore = E226,E302,E41
# E=error, W=warning, F=?, C4 stands for comprehensions
select = E,F,W,C4
exclude = tests/*, .git, __pycache__, docs/source/conf.py, venv, old, build, dist, cust_iface/auth/*
max-line-length = 120
# max-complexity = 10
docstring-convention = numpy
statistics = True
